# Tesseract Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Alchemy API Keys (recommended for production)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Keys (alternative to Alchemy)
INFURA_API_KEY=your_infura_api_key_here

# =============================================================================
# ACCOUNT CONFIGURATION
# =============================================================================

# IMPORTANT: Never commit real private keys to version control!
# Use hardware wallets or secure key management systems for mainnet

# Deployer account (contract owner)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Operator account (has BUFFER_ROLE and ADMIN_ROLE)
OPERATOR_PRIVATE_KEY=your_operator_private_key_here

# Resolver account (has RESOLVE_ROLE)
RESOLVER_PRIVATE_KEY=your_resolver_private_key_here

# Emergency admin account (can pause contract in emergencies)
EMERGENCY_ADMIN_PRIVATE_KEY=your_emergency_admin_private_key_here

# Use test accounts for local development
USE_TEST_ACCOUNT=false

# =============================================================================
# CONTRACT CONFIGURATION
# =============================================================================

# Coordination window in seconds (time window for cross-rollup coordination)
COORDINATION_WINDOW=30

# Maximum number of transactions per block (DoS protection)
MAX_TRANSACTIONS_PER_BLOCK=100

# Maximum number of transactions per user per block
MAX_USER_TRANSACTIONS_PER_BLOCK=10

# Maximum payload size in bytes
MAX_PAYLOAD_SIZE=2048

# Circuit breaker threshold (number of failures before activation)
CIRCUIT_BREAKER_THRESHOLD=50

# Emergency admin address (if different from deployer)
EMERGENCY_ADMIN=

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Prometheus endpoint for metrics
PROMETHEUS_ENDPOINT=http://localhost:9090

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack webhook for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test network configuration
TEST_NETWORK=ethereum:local:hardhat

# Number of test transactions for load testing
TEST_TRANSACTION_COUNT=1000

# Number of concurrent workers for testing
TEST_WORKER_COUNT=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Key vault configuration (for production)
KEY_VAULT_URL=
KEY_VAULT_CLIENT_ID=
KEY_VAULT_CLIENT_SECRET=

# Multi-signature wallet addresses
MULTISIG_WALLET_ADDRESS=

# Time-lock delay for critical operations (in seconds)
TIMELOCK_DELAY=86400

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug logging
DEBUG=false

# Development mode (enables additional logging and checks)
DEV_MODE=true

# Local network ports
LOCAL_RPC_PORT=8545
LOCAL_WS_PORT=8546

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub token for CI/CD
GITHUB_TOKEN=

# Deployment environment (dev, staging, prod)
DEPLOYMENT_ENV=dev

# Auto-verification on deployment
AUTO_VERIFY=true

# =============================================================================
# CROSS-CHAIN CONFIGURATION
# =============================================================================

# Cross-chain message relayer configuration
RELAYER_PRIVATE_KEY=your_relayer_private_key_here

# Cross-chain finality requirements (blocks)
ETHEREUM_FINALITY_BLOCKS=12
POLYGON_FINALITY_BLOCKS=256
ARBITRUM_FINALITY_BLOCKS=1
OPTIMISM_FINALITY_BLOCKS=1

# Oracle configuration for cross-chain state verification
ORACLE_ENDPOINT=
ORACLE_API_KEY=